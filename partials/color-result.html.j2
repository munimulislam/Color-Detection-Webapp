<div class="palette mt-5">
    <p>Colors Found:</p>
    {% for item in colors %}
    <div class="color-row">
        <div class="color-swatch" style="background-color: {{ item }};"></div>
        <div class="color-text">
            <div class="color-rgb">{{ item }}</div>
        </div>
    </div>
    {% endfor %}
</div>

<style>
    .palette {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-top: 10px;
    }

    .color-row {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .color-swatch {
        width: 40px;
        height: 40px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .color-text {
        font-family: monospace;
        font-size: 14px;
    }

    .color-name {
        font-weight: bold;
    }
</style>